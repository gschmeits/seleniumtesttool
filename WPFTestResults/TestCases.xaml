                     TabIndex="3" Height="24" MaxHeight="48" Width="495" />
            <TextBox Name="TextBoxTestElementName"
                     Grid.Row="4"
                     Grid.Column="1"
                     Margin="5,7,0,7"
                     VerticalAlignment="Center"
                     VerticalContentAlignment="Center"
                     HorizontalAlignment="Left"
                     HorizontalContentAlignment="Left"
                     TextWrapping="Wrap"
                     TabIndex="4" Height="24" Width="495" />
            <ComboBox Name="ComboBoxAttribute"
                      Grid.Row="0"
                      Grid.Column="3"
                      Margin="5"
                      Width="100"
                      HorizontalAlignment="Left"
                      VerticalAlignment="Center"
                      Height="24" DropDownClosed="ComboBoxAttribute_DropDownClosed"
                      TabIndex="5">
                <ListBoxItem Content="xpath" />
                <ListBoxItem Content="id" />
                <ListBoxItem Content="name" />
                <ListBoxItem Content="class" />
                <ListBoxItem Content="cssselector" />
                <ListBoxItem Content="" />
            </ComboBox>
            <ComboBox Name="ComboBoxAction"
                      Grid.Row="1"
                      Grid.Column="3"
                      Margin="5"
                      Width="150"
                      HorizontalAlignment="Left"
                      VerticalAlignment="Center"
                      Height="24" TabIndex="6" DropDownClosed="ComboBoxAction_DropDownClosed">
                <ListBoxItem Content="" />
                <ListBoxItem Content="click" />
                <ListBoxItem Content="sendkeys" />
                <ListBoxItem Content="select" />
                <ListBoxItem Content="value" />
                <ListBoxItem Content="checkbox" />
                <ListBoxItem Content="move_to" />
                <ListBoxItem Content="upload" />
                <ListBoxItem Content="switch to iFrame" />
                <ListBoxItem Content="set_value" />
                <ListBoxItem Content="get_value" />
                <ListBoxItem Content="wait" />
                <ListBoxItem Content="scroll" />
                <ListBoxItem Content="switch to url" />
            </ComboBox>
            <Label Grid.Row="3" Grid.Column="2" HorizontalAlignment="Right" Content="Description:" FontWeight="Bold"
                   VerticalAlignment="Center" />
            <TextBox Name="TextBoxComment" Grid.Row="3" Grid.Column="3" Grid.RowSpan="2" Margin="5,5,0,5"
                     Height="66"
                     Width="495"
                     TextWrapping="Wrap"
                     VerticalAlignment="Center"
                     VerticalContentAlignment="Top"
                     HorizontalAlignment="Left"
                     HorizontalContentAlignment="Left" TabIndex="8" VerticalScrollBarVisibility="Auto"
                     AcceptsReturn="True" />
            <TextBox Name="TextBoxTestText"
                     Grid.Row="2"
                     Grid.Column="3"
                     Margin="5,6,0,6"
                     Height="26"
                     Width="495"
                     VerticalAlignment="Center"
                     VerticalContentAlignment="Center"
                     HorizontalAlignment="Left"
                     HorizontalContentAlignment="Left" />
            <ComboBox Name="ComboBoxTestText"
                      Grid.Row="2"
                      Grid.Column="3"
                      Margin="5"
                      Height="25"
                      Width="214"
                      VerticalAlignment="Center"
                      VerticalContentAlignment="Center"
                      HorizontalAlignment="Left"
                      Visibility="Hidden"
                      HorizontalContentAlignment="Left" DropDownClosed="ComboBoxTestText_DropDownClosed">
                <ListBoxItem Content="" />
                <ListBoxItem Content="true" />
                <ListBoxItem Content="false" />
            </ComboBox>
            <ComboBox Name="ComboBoxSwitchTo"
                      Grid.Row="2"
                      Grid.Column="3"
                      Margin="5"
                      Height="25"
                      Width="214"
                      VerticalAlignment="Center"
                      VerticalContentAlignment="Center"
                      HorizontalAlignment="Left"
                      Visibility="Hidden"
                      HorizontalContentAlignment="Left" DropDownClosed="ComboBoxSwitchTo_DropDownClosed">
                <ListBoxItem Content="default" />
                <ListBoxItem Content="iframe" />
            </ComboBox>
            <ComboBox Name="ComboBoxGetValue"
                      Grid.Row="2"
                      Grid.Column="3"
                      Margin="5"
                      Height="25"
                      Width="214"
                      VerticalAlignment="Center"
                      VerticalContentAlignment="Center"
                      HorizontalAlignment="Left"
                      Visibility="Hidden"
                      HorizontalContentAlignment="Left" DropDownClosed="ComboBoxGetValue_DropDownClosed">
                <ListBoxItem Content="" />
            </ComboBox>
            <ComboBox Name="ComboBoxScroll"
                      Grid.Row="2"
                      Grid.Column="3"
                      Margin="5"
                      Height="25"
                      Width="214"
                      VerticalAlignment="Center"
                      VerticalContentAlignment="Center"
                      HorizontalAlignment="Left"
                      Visibility="Hidden"
                      HorizontalContentAlignment="Left" DropDownClosed="ComboBoxScroll_DropDownClosed" >
                <ListBoxItem Content="top" />
                <ListBoxItem Content="bottom" />
                <ListBoxItem Content="up" />
                <ListBoxItem Content="down" />
            </ComboBox>
            <PasswordBox Name="PasswordTestText"
                         Grid.Row="2"
                         Grid.Column="3"
                         Margin="5,7,0,7"
                         Height="24"
                         Width="495"
                         VerticalAlignment="Center"
                         VerticalContentAlignment="Center"
                         HorizontalAlignment="Left"
                         Visibility="Hidden"
                         HorizontalContentAlignment="Left" TabIndex="7" />
            <TextBox Name="TextBoxTestUrl"
                     Grid.Row="0"
                     Grid.Column="5"
                     Margin="5,6,0,7"
                     Height="24"
                     Width="494"
                     VerticalAlignment="Center"
                     VerticalContentAlignment="Center"
                     HorizontalAlignment="Left"
                     HorizontalContentAlignment="Left" TabIndex="9"  />
            <ComboBox Name="ComboBoxSwitch"
                      Grid.Row="1"
                      Grid.Column="5"
                      Margin="5"
                      Width="75"
                      HorizontalAlignment="Left"
                      VerticalAlignment="Center"
                      Height="24" TabIndex="10">
                <ListBoxItem Content="" />
                <ListBoxItem Content="yes" />
                <ListBoxItem Content="no" />
            </ComboBox>
            <TextBox Name="TextBoxTestDescription"
                     Grid.Row="2"
                     Grid.Column="5"
                     Grid.RowSpan="3"
                     Margin="5,8,0,36"
                     Height="70"
                     VerticalAlignment="Center"
                     VerticalContentAlignment="Top"
                     HorizontalAlignment="Left"
                     HorizontalContentAlignment="Left" TabIndex="11" TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto" MaxHeight="140" MinHeight="70" MinLines="3" MaxLength="450"
                     Width="494" AcceptsReturn="True" />
            <StackPanel Orientation="Horizontal"
                        Grid.Row="4"
                        Grid.Column="5">
                <ComboBox Name="ComboBoxExecute"
                          Margin="5"
                          Width="75"
                          HorizontalAlignment="Left"
                          VerticalAlignment="Center"
                          Height="24" TabIndex="12">
                    <ListBoxItem Content="yes" />
                    <ListBoxItem Content="no" />
                </ComboBox>
                <Label Content="Inverse:"
                       VerticalAlignment="Center"
                       HorizontalContentAlignment="Right"
                       FontWeight="Bold" />
                <ComboBox Name="ComboBoxInverse"
                          Width="75"
                          HorizontalAlignment="Left"
                          VerticalAlignment="Center"
                          Height="24" TabIndex="13">
                    <ListBoxItem Content="no" />
                    <ListBoxItem Content="yes" />
                </ComboBox>
            </StackPanel>

            <TextBox Name="TextBoxNoExecution"
                     Grid.Row="5"
                     VerticalContentAlignment="Center"
                     Grid.Column="5"
                     Height="24"
                     Margin="5,0"
                     Visibility="Hidden" />
            <Button Name="ButtonNoExecution"
                    Grid.Row="5"
                    Grid.Column="3"
                    Height="24"
                    Content="No Execution"
                    Click="ButtonNoExecution_Click"
                    Visibility="Hidden"
                    Style="{DynamicResource MyButtonStyle}"
                    Grid.ColumnSpan="2"
                    Margin="218,11.8,5.4,12.2"
                    Width="Auto" />
            <StackPanel Orientation="Horizontal" Grid.Row="5" Grid.ColumnSpan="2" HorizontalAlignment="Left">
                <TextBox Name="TextInsertRow" Margin="10,0,0,0" Height="24" Width="25" 
                         VerticalAlignment="Center" 
                         HorizontalContentAlignment="Right" 
                         VerticalContentAlignment="Center" 
                         Text="" KeyDown="TextInsertRow_KeyDown" />
                <Button Name="ButtonInsertRow"
                        IsEnabled="False"
                        Width="185"
                        Height="24"
                        Content="Insert Row After rownumber:"
                        Visibility="Visible"
                        HorizontalContentAlignment="Right"
                        Style="{DynamicResource MyButtonStyle}" Click="ButtonInsertRow_Click" />

            </StackPanel>

            <StackPanel Orientation="Horizontal"
                        Grid.Row="5"
                        Grid.ColumnSpan="6"
                        Height="48"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                <Button Name="ButtonAdd"
                        Margin="5,0"
                        Content="New Teststep"
                        Width="150"
                        Visibility="Visible"
                        Style="{DynamicResource MyButtonStyle}"
                        Click="ButtonAdd_Click" />
                <Button Name="ButtonEdit"
                        Margin="5,0"
                        Content="Save Teststep"
                        Width="150"
                        Visibility="Visible"
                        Style="{DynamicResource MyButtonStyle}"
                        Click="ButtonEdit_Click" />
                <Button Name="ButtonDelete"
                        Margin="5,0"
                        Content="Delete Teststep"
                        Width="150"
                        IsEnabled="False"
                        Visibility="Visible"
                        Style="{DynamicResource MyButtonStyle}"
                        Click="ButtonDelete_Click" />
            </StackPanel>
            <CheckBox Name="CheckBoxPassword"
                      Content="Password"
                      Grid.Column="3"
                      Grid.ColumnSpan="2"
                      HorizontalAlignment="Left"
                      Margin="170,16,0,0"
                      Grid.Row="1"
                      IsEnabled="False"
                      VerticalAlignment="Top"
                      Click="CheckBoxPassword_Click" />
        </Grid>
        <Border Grid.Row="2"
                Margin="3"
                Style="{DynamicResource BorderaStyleG}" />
        <DataGrid Name="AddDataGrid"
                  Margin="10,10,15,11"
                  Grid.Row="2"
                  AutoGenerateColumns="False"
                  IsSynchronizedWithCurrentItem="True"
                  AllowDrop="False"
                  MouseDoubleClick="AddDataGrid_MouseDoubleClick"
                  CanUserReorderColumns="True"
                  CanUserResizeColumns="True"
                  CanUserResizeRows="False"
                  CanUserSortColumns="True"
                  CanUserDeleteRows="False"
                  AlternatingRowBackground="{DynamicResource DataGridAchtergrondAlternatief}"
                  Background="{DynamicResource DataGridAchtergrond}"
                  IsReadOnly="True" ColumnWidth="Auto"
                  Visibility="Visible" RowHeaderWidth="0" GotFocus="AddDataGrid_GotFocus">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding id}"
                                    Width="50"
                                    Header="ID"
                                    Visibility="Visible"
                                    IsReadOnly="True">
                    <DataGridTextColumn.ElementStyle>
                        <Style>
                            <Setter Property="TextBlock.TextWrapping"
                                    Value="Wrap" />
                            <Setter Property="TextBlock.TextAlignment"
                                    Value="Center" />
                            <Setter Property="TextBlock.VerticalAlignment"
                                    Value="Center" />
                            <Setter Property="TextBlock.Margin"
                                    Value="5,0" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding rownr}"
                                    Width="50"
                                    Header="Record"
                                    Visibility="Visible"
                                    IsReadOnly="True">
                    <DataGridTextColumn.ElementStyle>
                        <Style>
                            <Setter Property="TextBlock.TextWrapping"
                                    Value="Wrap" />
                            <Setter Property="TextBlock.TextAlignment"
                                    Value="Center" />
                            <Setter Property="TextBlock.VerticalAlignment"
                                    Value="Center" />
                            <Setter Property="TextBlock.Margin"
                                    Value="5,0" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding testnr}"
                                    Width="50"
                                    Header="Nr"
                                    Visibility="Visible">
                    <DataGridTextColumn.ElementStyle>
                        <Style>
                            <Setter Property="TextBlock.TextWrapping"
                                    Value="Wrap" />
                            <Setter Property="TextBlock.TextAlignment"
                                    Value="Center" />
                            <Setter Property="TextBlock.VerticalAlignment"
                                    Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding testcase}"
                                    Width="125"
                                    Header="Testcase"
                                    Visibility="Visible">
                    <DataGridTextColumn.ElementStyle>
                        <Style>
                            <Setter Property="TextBlock.TextWrapping"
                                    Value="Wrap" />
                            <Setter Property="TextBlock.TextAlignment"
                                    Value="Left" />
                            <Setter Property="TextBlock.VerticalAlignment"
                                    Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding testelementname}"
                                    Width="250"
                                    Header="Logical Name">
                    <DataGridTextColumn.ElementStyle>
                        <Style>
                            <Setter Property="TextBlock.TextWrapping"
                                    Value="Wrap" />
                            <Setter Property="TextBlock.TextAlignment"
                                    Value="Left" />
                            <Setter Property="TextBlock.VerticalAlignment"
                                    Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>

                </DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding testelement}"
                                    Width="450"
                                    Header="Element">
                    <DataGridTextColumn.ElementStyle>
                        <Style>
                            <Setter Property="TextBlock.TextWrapping"
                                    Value="Wrap" />
                            <Setter Property="TextBlock.TextAlignment"
                                    Value="Left" />
                            <Setter Property="TextBlock.VerticalAlignment"
                                    Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>

                </DataGridTextColumn>
                <DataGridTextColumn Header="Attribute"
                                    Width="80"
                                    CanUserSort="False"
                                    Binding="{Binding testattribute}">
                    <DataGridTextColumn.ElementStyle>
                        <Style>
                            <Setter Property="TextBlock.TextWrapping"
                                    Value="Wrap" />
                            <Setter Property="TextBlock.TextAlignment"
                                    Value="Left" />
                            <Setter Property="TextBlock.VerticalAlignment"
                                    Value="Center" />
                            <Setter Property="TextBlock.Margin"
                                    Value="5,0" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Action"
                                    Width="80"
                                    CanUserSort="False"
                                    Binding="{Binding testaction}">
                    <DataGridTextColumn.ElementStyle>
                        <Style>
                            <Setter Property="TextBlock.TextWrapping"
                                    Value="Wrap" />
                            <Setter Property="TextBlock.TextAlignment"
                                    Value="Left" />
                            <Setter Property="TextBlock.VerticalAlignment"
                                    Value="Center" />
                            <Setter Property="TextBlock.Margin"
                                    Value="5,0" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding testtext}"
                                    Width="200"
                                    Header="Text">
                    <DataGridTextColumn.ElementStyle>
                        <Style>
                            <Setter Property="TextBlock.TextWrapping"
                                    Value="Wrap" />
                            <Setter Property="TextBlock.TextAlignment"
                                    Value="Left" />
                            <Setter Property="TextBlock.VerticalAlignment"
                                    Value="Center" />
                            <Setter Property="TextBlock.Margin"
                                    Value="5,0" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding testext_check}"
                                    Width="200"
                                    Header="Text Check">
                    <DataGridTextColumn.ElementStyle>
                        <Style>
                            <Setter Property="TextBlock.TextWrapping"
                                    Value="Wrap" />
                            <Setter Property="TextBlock.TextAlignment"
                                    Value="Left" />
                            <Setter Property="TextBlock.VerticalAlignment"
                                    Value="Center" />
                            <Setter Property="TextBlock.Margin"
                                    Value="5,0" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Execute"
                                    Binding="{Binding testexecution}" />
                <DataGridTextColumn Header="Inverse Test"
                                    Binding="{Binding testinverse}" />
                <DataGridTextColumn Binding="{Binding testurl}"
                                    Width="125"
                                    Header="url">
                    <DataGridTextColumn.ElementStyle>
                        <Style>
                            <Setter Property="TextBlock.TextWrapping"
                                    Value="Wrap" />
                            <Setter Property="TextBlock.TextAlignment"
                                    Value="Left" />
                            <Setter Property="TextBlock.VerticalAlignment"
                                    Value="Center" />
                            <Setter Property="TextBlock.Margin"
                                    Value="5,0" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTemplateColumn Header="Switch"
                                        Width="50"
                                        CanUserSort="False">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Name="switch_cb"
                                       Margin="5,0"
                                       Text="{Binding testswitch}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Binding="{Binding testdescription}"
                                    Width="200"
                                    Header="Description">
                    <DataGridTextColumn.ElementStyle>
                        <Style>
                            <Setter Property="TextBlock.TextWrapping"
                                    Value="Wrap" />
                            <Setter Property="TextBlock.TextAlignment"
                                    Value="Left" />
                            <Setter Property="TextBlock.VerticalAlignment"
                                    Value="Center" />
                            <Setter Property="TextBlock.Margin"
                                    Value="5,0" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding testcomment}"
                                    Width="350"
                                    Header="Comment">
                    <DataGridTextColumn.ElementStyle>
                        <Style>
                            <Setter Property="TextBlock.TextWrapping"
                                    Value="Wrap" />
                            <Setter Property="TextBlock.TextAlignment"
                                    Value="Left" />
                            <Setter Property="TextBlock.VerticalAlignment"
                                    Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="buttonUpdate"
                Style="{DynamicResource MyButtonStyle}"
                Content="Update data"
                Grid.Row="3"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="100"
                Visibility="Hidden" />
        <Button x:Name="buttonClear"
                Style="{DynamicResource MyButtonStyle}"
                Content="Delete selected row"
                HorizontalAlignment="Left"
                Margin="21,0,0,0"
                Grid.Row="3"
                VerticalAlignment="Center"
                Visibility="Hidden"
                Width="150"
                IsEnabled="False" />
        <Button x:Name="buttonCloseWindow"
                Style="{DynamicResource MyButtonStyle}"
                Content="Close"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Margin="0,0,60,0"
                Grid.Row="3"
                Width="100"
                Height="32"
                Click="buttonCloseWindow_Click" IsEnabled="True" />
        <StackPanel Orientation="Horizontal" Grid.Row="3" Margin="15,0">
            <Label Content="Total Teststeps: "
                   VerticalAlignment="Center"
                   FontWeight="Bold" />
            <Label Name="LabelTestSteps"
                   Content="0"
                   VerticalAlignment="Center"
                   VerticalContentAlignment="Center" />
            <Label Content="Selected recordnumber: "
                   VerticalAlignment="Center"
                   FontWeight="Bold" />
            <Label Name="LabelTestRecord"
                   Content="-"
                   VerticalAlignment="Center"
                   VerticalContentAlignment="Center" />
        </StackPanel>
    </Grid>
</Window>