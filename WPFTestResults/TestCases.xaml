                   Grid.Row="0"
                   Grid.Column="2"
                   VerticalAlignment="Center"
                   HorizontalContentAlignment="Right"
                   Margin="5"
                   FontWeight="Bold" />
            <Label Content="Action:"
                   Grid.Row="1"
                   Grid.Column="2"
                   VerticalAlignment="Center"
                   HorizontalContentAlignment="Right"
                   Margin="5"
                   FontWeight="Bold" />
            <Label Name="LabelTextBox"
                   Content="Text:"
                   Grid.Row="2"
                   Grid.Column="2"
                   VerticalAlignment="Center"
                   HorizontalContentAlignment="Right"
                   Margin="5"
                   FontWeight="Bold" />
            <Label Name="LabelCheckBox"
                   Content="Checkbox:"
                   Grid.Row="2"
                   Grid.Column="2"
                   VerticalAlignment="Center"
                   HorizontalContentAlignment="Right"
                   Margin="5"
